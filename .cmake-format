parse:
  additional_commands:
    sbom_spdxid:
      kwargs:
        VARIABLE: 1
        CHECK: 1
        HINTS: '*'
    sbom_generate:
      kwargs:
        OUTPUT: 1
        INPUT: '*'
        COPYRIGHT: 1
        LICENSE: 1
        NAMESPACE: 1
        PROJECT: 1
        SUPPLIER: 1
        SUPPLIER_URL: 1
        DOWNLOAD_URL: 1
        EXTREF: 1
        OSV_QUERY: 1
    sbom_file:
      kwargs:
        FILENAME: 1
        FILETYPE: 1
        RELATIONSHIP: 1
        SPDXID: 1
    sbom_target:
      kwargs:
        TARGET: 1
    sbom_directory:
      kwargs:
        DIRECTORY: 1
        FILETYPE: 1
        RELATIONSHIP: 1
    sbom_package:
      kwargs:
        PACKAGE: 1
        VERSION: 1
        LICENSE: 1
        DOWNLOAD_LOCATION: 1
        RELATIONSHIP: 1
        SPDXID: 1
        SUPPLIER: 1
        PURL: 1
        COMMIT: 1
    sbom_external:
      kwargs:
        EXTERNAL: 1
        FILENAME: 1
        RENAME: 1
        RELATIONSHIP: 1
        SPDXID: 1
    sbom_license:
      kwargs:
        LICENSE: 1
        NAME: 1
        FILE: 1
        TEXT: 1
    sbom_add:
      kwargs:
        FILENAME: 1
        FILETYPE: 1
        RELATIONSHIP: 1
        SPDXID: 1
        TARGET: 1
        DIRECTORY: 1
        PACKAGE: 1
        VERSION: 1
        LICENSE: 1
        DOWNLOAD_LOCATION: 1
        EXTERNAL: 1
        RENAME: 1
        SUPPLIER: 1
        NAME: 1
        FILE: 1
        TEXT: 1
        COMMIT: 1
    osv_add:
      kwargs:
        PACKAGE: 1
        VERSION: 1
        COMMIT: 1
        ECOSYSTEM: 1
        PURL: 1

format:
  line_width: 100
  tab_size: 8
  use_tabchars: yes
  dangle_parens: yes

markup:
  first_comment_is_literal: yes
